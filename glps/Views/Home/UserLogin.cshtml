@model glps.Models.User

@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="card">
    <div class="card-body navbar-light" style="background-color: #e3f2fd;">
        <div>
            <div>
                <h4><strong>Login, If Already Registered</strong> </h4>
            </div>

        </div>
    </div>
    <div class="card-body" id="Display">
        <div>
            <div>
                @using (Html.BeginForm("UserLogin", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-floating mb-3">
                        @*@Html.LabelFor(m => m.EmailID, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div>
                            @Html.TextBoxFor(m => m.EmailID, "", new { @class = "form-control", @placeholder = "Email ID" })
                            @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        @*@Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div>
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", type = "password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">


                        <div class="form-floating mb-3">
                            <input type="submit" value="Login" class="btn btn-primary" />

                        </div>

                        @*<a href="#" class="card-link">Click Here For New Registration</a>*@
                        @*@Ajax.ActionLink("Click Here For New Registration", "UserRegistration", "User",
    new AjaxOptions() { UpdateTargetId = "Display" })*@

                    </div>
                }
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    @*<div class="card">
            <div class="card-body">
                <div class="form-floating mb-3">
                    <input type="submit" value="New Registration" class="btn btn-primary" />
                </div>
            </div>
        </div>*@
</div>

