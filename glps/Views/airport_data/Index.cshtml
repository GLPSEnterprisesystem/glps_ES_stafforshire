@model IEnumerable<glps.Models.airport_data>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IATA_code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISO_Alpha_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Long_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IATA_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISO_Alpha_Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Long_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
